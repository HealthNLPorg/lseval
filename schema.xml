<View>
  <Relations>
    <Relation value="Doubtful"/>
    <Relation value="Possible"/>
    <Relation value="Probable"/>
    <Relation value="Certain"/>
    <Relation value="Signature"/>
    <Relation value="Agreement"/>
    <Relation value="Danielle"/>
    <Relation value="Joyce"/>
  </Relations>
  <View style="display:flex;align-items:start;gap:8px;flex-direction:column-reverse">
    <Text name="text" value="$text" granularity="word"/>
    <TextArea name="CUI" toName="text" editable="true"
              showSubmitButton="true" transcription="false"
              perRegion="true" required="true" maxSubmissions="1"
              rows="5" placeholder="Non UMLS Concept"
              displayMode="region-list"/>
    <Choices name="DocTimeRel" toName="text" perRegion="true">
      <Choice value="BEFORE" background="aqua"/>
      <Choice value="OVERLAP" background="teal"/>
      <Choice value="BEFORE-OVERLAP" background="blue"/>
      <Choice value="AFTER" background="navy"/>
    </Choices>
    <Labels name="Event" toName="text" showInline="true">
      <Label value="Adverse Event" background="red"/>
      <Label value="Radiotherapy Treatment" background="magenta"/>
    </Labels>
    <Labels name="RadiotherapySignature" toName="text" showInline="true">
      <Label value="Secondary Dose" background="magenta"/>
      <Label value="Boost" background="fuchsia"/>
      <Label value="Fraction Number" background="seagreen"/>
      <Label value="Fraction Frequency" background="teal"/>
      <Label value="Site" background="salmon"/>
      <Label value="Date" background="rebeccapurple"/>
    </Labels>
    <Choices name="IAA" toName="text" perRegion="true">
      <Choice value="Agreement" background="gold"/>
      <Choice value="Danielle" background="green"/>
      <Choice value="Joyce" background="cyan"/>
    </Choices>
    <!-- <Labels name="IAA" toName="text" showInline="true"> -->
    <!--   <Label value="Agreement" background="yellow"/> -->
    <!--   <Label value="Prediction" background="magenta"/> -->
    <!--   <Label value="Reference" background="cyan"/> -->
    <!-- </Labels> -->
  </View>
</View><!-- {"data": {
